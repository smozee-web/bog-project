  <script type="text/javascript">
    $("#myForm").submit(function(event) {
      // Prevent default form submission
      event.preventDefault();

      // Serialize form data
      var formData = $(this).serialize();

      // Send AJAX request to server
      $.ajax({
        url: "/authz_entry",
        type: "POST",
        data: formData,
        success: function(response) {
          // Handle successful response from server
          alert("Entry submitted successfully!");
        },
        error: function(xhr, status, error) {
          // Handle error response from server
          alert("Error: " + error);
        }
      });

      // If "Submit and new" button clicked, clear form
      if ($(event.relatedTarget).text() === "Submit and new") {
        this.reset();
      }
    });


    function checkfile(sender) {
      var validExts = new Array(".csv");
      var fileExt = sender.value;
      fileExt = fileExt.substring(fileExt.lastIndexOf('.'));
      if (validExts.indexOf(fileExt) < 0) {
        Swal.fire({
          title: 'Invalid file selected, valid files are of ' + validExts.toString() + " types.",
          icon: "error"
        });
        return false;
      } else return true;
    }

    function truncate(str, limit) {
      return str.length > limit ? str.substr(0, limit) + '&hellip;' : str;
    }

    $(() => {
      $.ajaxSetup({
        headers: {
          'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
        }
      });
    })
  </script>


  <%- include('../../partials/admin-layout'); %>
  <script type="text/javascript">
    let $objects = {};

    $(() => {
      $objects['table'] = $('#table');

      let selectedRow = null;
      let datatable = null;

      datatable = $objects['table']
        .on('click', '.view', function(e) {
          selectedRow = datatable.row($(this).closest('tr'));

          location = '/ghipss/file/' + selectedRow.data()._id;
        })
        .on('click', '.delete', function(e) {
          selectedRow = datatable.row($(this).closest('tr'));
          const fileId = selectedRow.data()._id;

          Swal.fire({
            title: 'Do you want to delete this file?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Delete',
          }).then(result => {
            if (result.isConfirmed) {
              Swal.fire({
                'title': 'Deleting...',
                'didOpen': () => {
                  Swal.showLoading();
                },
                'allowOutsideClick': false
              });
              
              $.ajax({
                url: `/ghipss/delete_file/${fileId}`,
                method: 'POST',
                data: {},
                dataType: 'json',
                success: result => {
                  if (result.status == 'success') {
                    Swal.fire({
                      'title': 'File deleted!',
                      'icon': 'success'
                    });

                    datatable.draw(false);
                  } else {
                    if ('message' in result) {
                      Swal.fire({
                        title: 'Error!',
                        text: result.message,
                        icon: 'error'
                      });
                    } else
                      Swal.close();
                  }
                },
                'error': result => {
                  console.log(result);
                }
              });
            }
          });
        })
        .DataTable({
          processing: true,
          serverSide: true,
          columns: [{
              data: '__no__'
            },
            {
              data: 'filename'
            },
            {
              data: 'loaded_at'
            },
            {
              data: 'actions',
              orderable: false
            }
          ],
          order: [0, 'asc'],
          ajax: {
            url: `/ghipss/file_list`,
            type: 'POST',
            dataType: 'json',
            data: d => {},
            error: data => {
              console.log(data);
            }
          },
          pageLength: 25,
          autoWidth: false,
          scrollX : true
        });
    });
  </script>

